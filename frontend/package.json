{
  "name": "portfolio-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel watch:css serve",
    "serve": "live-server src --port=3000 --watch=src",
    "build:css": "tailwindcss -i ./src/tw-input.css -o ./src/tw.generated.css --minify",
    "watch:css": "tailwindcss -i ./src/tw-input.css -o ./src/tw.generated.css --watch",
    "start": "npm run dev"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.10"
  }
}
